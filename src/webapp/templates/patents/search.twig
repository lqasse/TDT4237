{% extends 'layouts/base.twig' %}

{% block content %}
    <h2>Patents</h2>
    <input type="text" name="query" value="{{query | raw }}"></input><a href="/patents/search/"> Search </a>
    <table class="ui single line table">
        <thead>
            <tr>
        		<th> Title </th>
        		<th> Company/User </th>
        		<th> Description </th>
        	</tr>
        </thead>

        <tbody>
            {% for patents in patent %}
        	<tr>
        		<td><a href="/patents/{{patents.patentId}}">{{ patents.title }}</a></td>
                {% if patents.company == user.username %}
                    <td><a href="/users/{{ patents.company|raw }}">{{ patents.company|raw }}</a></td>
                {% else %}
        		<td> {{ patents.company|raw }} </td>
                {% endif %}
        		<td> {{ patents.description|raw }}</td>
        	</tr>
        	{% endfor %}

        </tbody>
    </table>
{% endblock %}
